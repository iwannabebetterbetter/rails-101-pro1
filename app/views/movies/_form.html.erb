<%= form_for @movie do |f| %>
<div class="form-movie">
    <div class="form-movie string optional">
        <%= f.label "名字", :class => "string optional control-label" %>
        <%= f.text_field :title, :class => "string optional form-control" %>
    </div>

    <div class="form-movie string optional">
        <%= f.label "简介", :class => "string optional control-label" %>
        <%= f.text_area :description, :class => "string optional form-control" %>
    </div>

</div>
<%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submitting..." } %>
<% end %>
